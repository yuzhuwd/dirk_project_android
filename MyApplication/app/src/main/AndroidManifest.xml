<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dirkwang.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Dirk"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PPActivity"
            android:label="LoadingBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="PPActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AnimationDemoActivity"
            android:label="AnimationDemo"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="AnimationDemoActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.OtherAnimationActivity"
            android:label="OtherAnimation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SkinningAssetsActivity"
            android:label="SkinningActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="SkinningAssetsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SkinningColorfulActivity"
            android:label="SkinningColorful"
            android:screenOrientation="portrait"
            android:theme="@style/NightTheme">
            <intent-filter>
                <action android:name="SkinningColorfulActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RecyclerActivity"
            android:label="Recycler"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SkinViewActivity"
            android:label="SkinView"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="SkinViewActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>